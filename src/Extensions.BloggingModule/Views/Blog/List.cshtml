@model List<BlogPost>
@{
    ViewData["Title"] = "Blogs";
    Dictionary<int, BlogPostVote> pv = ViewBag.PostsVote;
}

<div class="container-fluid pl-0 pr-0" style="max-width:960px">
    <partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
    @{ TempData.Remove("StatusMessage"); }
    <h1 class="mt-3 mb-4">Blogs</h1>
    <partial name="BlogList" model="@Model" />
    
@if (Model.Count == 0)
{
    <h4 class="text-muted">no data.</h4>
}
else
{
    <pagination bs-current-page="@ViewBag.Page" />
}

    <p asp-in-roles="Administrator">
        <a asp-action="Publish" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Publish</a>
    </p>
</div>
